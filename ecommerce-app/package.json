{
  "name": "ecommerce-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md,html,htm}\"",
    "type-check": "tsc --noEmit",
    "build:size": "npm run build && npx size-limit",
    "precommit": "npm run lint && npm run type-check",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "dependencies": {
    "@ecommerce/common": "file:../common",
    "@tanstack/react-query": "^5.77.2",
    "@tanstack/react-query-devtools": "^5.77.2",
    "@types/http-proxy-middleware": "^0.19.3",
    "@types/uuid": "^10.0.0",
    "browser-image-compression": "^2.0.2",
    "critters": "^0.0.23",
    "form-data": "^4.0.4",
    "http-proxy-middleware": "^3.0.5",
    "next": "latest",
    "react": "latest",
    "react-dom": "latest",
    "react-icons": "^5.5.0",
    "react-toastify": "^11.0.5",
    "typescript": "latest",
    "uuid": "^11.1.0",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.28.0",
    "@next/bundle-analyzer": "^15.0.0",
    "@size-limit/preset-app": "^11.0.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.15.21",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.18",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-testing-library": "^6.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.5.3",
    "size-limit": "^11.0.0",
    "ts-jest": "^29.2.5"
  },
  "size-limit": [
    {
      "path": ".next/static/chunks/pages/index.js",
      "limit": "300 KB"
    },
    {
      "path": ".next/static/chunks/pages/_app.js",
      "limit": "200 KB"
    }
  ],
  "browserslist": {
    "production": [
      "chrome >= 91",
      "firefox >= 90",
      "safari >= 14",
      "edge >= 91",
      "> 0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
