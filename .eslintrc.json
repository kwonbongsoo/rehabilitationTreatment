{
  "extends": ["eslint:recommended"],
  "rules": {
    "no-console": [
      "warn",
      {
        "allow": ["warn", "error", "info", "log", "debug"]
      }
    ]
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "overrides": [
    {
      "files": ["**/*.test.js", "**/*.spec.js"],
      "env": { "jest": true }
    }
  ]

}
