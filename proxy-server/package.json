{
  "name": "proxy-server",
  "version": "1.0.0",
  "description": "Bun-based proxy server for HTML caching and authentication",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "test": "bun test",
    "docker:dev": "docker-compose up proxy-server --build",
    "docker:logs": "docker logs proxy-server -f"
  },
  "dependencies": {
    "bun": "latest",
    "redis": "^5.6.1"
  },
  "devDependencies": {
    "@types/bun": "latest"
  }
}
