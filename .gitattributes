# Set default line ending behavior, in case users don't have core.autocrlf set.
* text=auto

# Text files that should have Unix line endings (LF)
*.ts text eol=lf
*.js text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.txt text eol=lf
*.sh text eol=lf
*.conf text eol=lf

# Windows-specific files should use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary
*.pdf binary
*.zip binary
*.tar.gz binary

# Package lock files should maintain their original line endings
package-lock.json text eol=lf
yarn.lock text eol=lf
